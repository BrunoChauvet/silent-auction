<div id="auction" class="container auction" ng-controller="AuctionCtrl" ng-init="init()">
  
  <div ng-repeat="item in items" class="col-md-6 item-container">
  	<div class="col-md-3 item-image">
  		<img src="http://placekitten.com/150/150"/>
  	</div>
    
  	<div class="col-md-9 item-content">
	  	<div class="item-name">{{item.item.name}}</div>
	  	<div class="col-md-12 item-bid">
		  	<div class="col-md-4 item-price">${{item.bid.price}}</div>
		  	<div class="col-md-8 item-user">{{item.user.first_name}} {{item.user.last_name}}</div>
		  </div>
  	</div>
  </div>

</div>
