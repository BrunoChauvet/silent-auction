<div id="auction" class="container auction" ng-controller="AuctionCtrl" ng-init="init()">
  <div class="col-md-12 item-container">
    <span id="amount-raised">Amount raised: {{amountRaised | currency}}</span>
    <span id="time-left">Time left: {{timer}}</span>
  </div>

  <div ng-repeat="item in pageItems" class="col-md-6 item-container">
  	<div class="col-md-3 item-image">
  		<!-- img src="http://placekitten.com/150/150"/ -->
  	</div>
    
  	<div class="col-md-9 item-content">
	  	<span class="item-code">{{item.item.code}}</span>
      <span class="item-name">{{item.item.name}}</span>
	  	<div class="col-md-12 item-bid">
		  	<div class="col-md-4 item-price">
          <span ng-show="item.bid.price">{{item.bid.price | currency}}</span>
          <span ng-hide="item.bid.price">{{item.item.start_price | currency}}</span>
        </div>
		  	<div ng-show="item.bid.price" class="col-md-8 item-user">{{item.user.title}} {{item.user.first_name}} {{item.user.last_name}}</div>
        <div ng-hide="item.bid.price" class="col-md-8 item-user">Start price</div>
		  </div>
  	</div>
  </div>

</div>
