<%= render partial: 'common/authentication_header', locals: {title: "Enter your PIN"} %>

<div id="authenticate" class="list container">
  <div class="row">
    <div class="col-md-12 list-item username mask1"><%= "#{@user.title} #{@user.first_name} #{@user.last_name}" %></div>
  </div>

  <% if flash[:error] %>
    <div class="alert alert-danger"><%= flash[:error] %></div>
  <% end %>

  <div class="row">
    <div class="col-md-12 pin">
      <%= form_tag({},{:class => 'form-horizontal', :role => 'form'}) do %>
        <div class="form-group">
          <label for="pin" class="col-sm-2 control-label">PIN</label>
          <div class="col-sm-10">
            <input type="number" class="form-control" id="pin" name="pin">
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-primary btn-lg" value="Submit"></input>
          </div>
       </div>
      <% end %>
    </div>
  </div>
</div>
