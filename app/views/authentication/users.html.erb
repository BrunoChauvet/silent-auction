<%= render partial: 'common/authentication_header', locals: {title: "Select your name"} %>

<div id="users" class="list container">
  <div class="row">
    <div class="col-md-12 back-button">
      <%= link_to authenticate_select_table_path, html_options = {class: "btn btn-primary btn-sm"} do %>
        <i class="glyphicon glyphicon-chevron-left">Back</i>
      <% end %>
    </div>
  </div>

  <% @users.each_with_index do |user, index| %>
  	<div class="row">
      <div class="col-md-12 list-item mask<%= index%8 + 1 %>">
        <%= link_to "#{user.title} #{user.first_name} #{user.last_name}", user_pin_path(user.id) %>
      </div>
    </div>
  <% end %>
</div>
