<%= render partial: 'common/authentication_header', locals: {title: "Select your name"} %>

<div id="users" class="list container">
  <div class="row header-row">
    <div class="col-md-12">
      <h3>
        <%= link_to authenticate_select_table_path, html_options = {class: "btn btn-primary btn-md"} do %>
          <i class="glyphicon glyphicon-chevron-left">Back</i>
        <% end %>
        Please authenticate
      </h3>
      <h4>Select your name</h4>
    </div>
  </div>

  <% @users.each_with_index do |user, index| %>
  	<div class="row">
      <div class="col-xs-12 list-item mask<%= index%8 + 1 %>">
        <%= link_to user_pin_path(user.id) do %>
          <span class="glyphicon glyphicon-chevron-right pull-right"></span>
          <%= "#{user.title} #{user.first_name} #{user.last_name}" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
