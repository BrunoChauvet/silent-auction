<%= render partial: 'common/authentication_header', locals: {title: "Select your table"}  %>

<div id="tables" class="container list">
  <div class="row header-row">
    <div class="col-md-12">
      <h3>Please authenticate</h3>
      <h4>Select your table</h4>
    </div>
  </div>

  <% @tables.each_with_index do |table, index| %>
    <div class="row">
      <div class="col-md-12 list-item mask<%= index%8 + 1 %>">
        <%= link_to authenticate_select_user_path(table.id) do %>
          <span class="glyphicon glyphicon-chevron-right pull-right"></span>
          <%= table.name %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
