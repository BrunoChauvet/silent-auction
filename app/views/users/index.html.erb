<h1>Listing users</h1>

<% if flash[:message] %>
  <div class="alert alert-success"><%= flash[:message] %></div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Pin</th>
      <th>Table</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.title %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.pin %></td>
        <td><%= user.user_group.name %></td>
        <td><%= button_to 'Edit', edit_user_path(user), :class => 'btn btn-primary' %></td>
        <td><%= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
