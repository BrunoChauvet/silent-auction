<%= render partial: 'common/host_header', locals: {back_link: select_item_path(user_id: @user.id)} %>

<div id="bid" class="container" ng-controller="BidsCtrl" ng-init="init(<%= @user.id =%>, <%= @item.id =%>, <%= @last_bid.present? ? @last_bid.price + Bid::MINIMUM_INCREMENT : @item.start_price =%>)">

  <div class="row">
    <div class="col-md-12 bid-user"><%= @user.title %> <%= @user.first_name %> <%= @user.last_name %></div>
  </div>

  <div class="row">
    <div class="col-md-12 bid-item"><%= @item.code %> <%= @item.name %></div>
  </div>

  <div class="row">
    <div class="col-md-12 bid-price"><span class="bid-price-label">Bid price: </span>${{price}}</div>
  </div>

  <div class="row">
    <div class="col-md-12 bid-actions">
      <button class="btn btn-default btn-lg" type="submit" ng-click="refresh()">
        <span class="glyphicon glyphicon-refresh"></span><span class="btn-bid">Reset</span>
      </button>
      <button class="btn btn-default btn-lg" type="submit" ng-click="add(10)">
        <span class="glyphicon glyphicon-plus"></span><span class="btn-bid">$10</span>
      </button>
      <button class="btn btn-default btn-lg" type="submit" ng-click="add(50)">
        <span class="glyphicon glyphicon-plus"></span><span class="btn-bid">$50</span>
      </button>
    </div>
  </div>

  <div class="row" ng-show="error != ''">
    <div class="col-md-12">&nbsp;</div>
    <div class="bid-message alert alert-danger">{{error}}</div>
  </div>

  <div class="row"><div class="col-md-12">&nbsp;</div></div>

  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-5"></div>
        <div class="col-md-2">
          <button id="place-bid" type="submit" class="btn btn-primary btn-lg btn-success" ng-click="placeBid()">Place Bid</button>
        </div>
        <div class="col-md-5"></div>
      </div>
    </div>
  </div>

</div>
