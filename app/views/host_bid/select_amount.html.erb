<%= render partial: 'common/host_header' %>

<div id="bid" class="container" ng-controller="HostBidsCtrl" ng-init="init(<%= @user.id =%>, <%= @item.id =%>, <%= @item.current_price =%>, <%= @item.minimum_price =%>)">

  <div class="row">
    <div class="col-md-12 bid-title">
      <h1>
        <%= link_to select_item_path(user_id: @user.id), html_options = {class: "btn btn-primary btn-lg"} do %>
          <i class="glyphicon glyphicon-chevron-left">Back</i>
        <% end %>
        Place Bid
      </h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 bid-user">
      <span class="name">Guest: </span>
      <span class="value"><%= @user.title %> <%= @user.first_name %> <%= @user.last_name %></span>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 bid-item">
      <span class="name">Package: </span>
      <span class="value"><%= @item.code %> - <%= @item.name %></span>
    </div>
  </div>

  <div class="bid-amount">
    <div class="row">
      <div class="col-md-12">
        <div class="bid-price">
          <span class="name">Bid price: </span>
          <span class="current-price">{{biddingPrice | roundedCurrency}}</span>
        </div>
      </div>
      <div ng-show="currentPrice == defaultPrice" class="col-md-12 sub-price">
        <div class="bid-current-price">Start price: {{currentPrice | roundedCurrency}}</div>
      </div>
      <div ng-hide="currentPrice == defaultPrice" class="col-md-12 sub-price">
        <div class="bid-current-price">Current price: {{currentPrice | roundedCurrency}}</div>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-md-12 bid-actions">
      <button class="btn btn-default btn-lg" type="submit" ng-click="refresh()">
        <span class="glyphicon glyphicon-refresh"></span><span class="btn-bid">Reset</span>
      </button>
      <button class="btn btn-default btn-lg" type="submit" ng-click="add(<%= @item.bid_increment %>)">
        <span class="glyphicon glyphicon-plus"></span><span class="btn-bid">$<%= @item.bid_increment %></span>
      </button>
    </div>
  </div>

  <div class="row" ng-show="error != ''">
    <div class="col-md-12">&nbsp;</div>
    <div class="bid-message alert alert-danger">{{error}}</div>
  </div>

  <div class="row"><div class="col-md-12">&nbsp;</div></div>

  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-5"></div>
        <div class="col-md-2">
          <button id="submit-bid" type="submit" class="btn btn-primary btn-lg btn-success" ng-click="placeBid()">
            <span class="glyphicon glyphicon-usd"></span> Place Bid
          </button>
        </div>
        <div class="col-md-5"></div>
      </div>
    </div>
  </div>

</div>
