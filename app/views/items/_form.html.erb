<%= form_for(@item, html: {role: "form", class: "form-inline"}) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-xs-1">
    <%= f.label :code %>
    <%= f.text_field :code, :class => 'form-control' %>
  </div>
  <div class="form-group col-xs-2">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group col-xs-2">
    <%= f.label :description %>
    <%= f.text_field :description, :class => 'form-control' %>
  </div>
  <div class="form-group col-xs-2">
    <%= f.label :category %>
    <%= f.select(:category_id, @categories.collect {|c| [ c.name, c.id ] }, { include_blank: false }, :class => 'form-control') %>
  </div>
  <div class="form-group col-xs-1">
    <%= f.label :start_price %>
    <%= f.text_field :start_price, :class => 'form-control' %>
  </div>
  <div class="form-group col-xs-1">
    <%= f.label :bid_increment %>
    <%= f.text_field :bid_increment, :class => 'form-control' %>
  </div>
  <div class="form-group col-xs-2">
    <%= f.label :image %>
    <img src="<%= @item.image.thumb.url %>"/>
    <%= f.file_field :image %>
  </div>

  <div class="form-group actions col-xs-1">
    <%= f.label :update %>
    <%= f.submit :id => 'item_update', :class => 'form-control btn btn-primary' %>
  </div>
<% end %>
