<h1>Listing items</h1>

<%= link_to admin_path, html_options = {class: "btn"} do %>
  <i class="glyphicon glyphicon-home">Administration</i>
<% end %>

<br/>

<%= link_to new_item_path, html_options = {class: "btn"} do %>
  <i class="glyphicon glyphicon-plus">New Item</i>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th>Start price</th>
      <th>Bid increment</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.code %></td>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.category.name %></td>
        <td>$<%= item.start_price %></td>
        <td>$<%= item.bid_increment %></td>
        <td><%= button_to 'Edit', edit_item_path(item), method: :get, :class => 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
